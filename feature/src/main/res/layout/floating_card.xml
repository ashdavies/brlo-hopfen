<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/CardViewStyle"
    android:id="@+id/card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/default_margin"
    android:layout_gravity="center_vertical"
    app:cardCornerRadius="@dimen/card_corner_radius"
    app:cardElevation="@dimen/card_elevation">

  <FrameLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

      <de.brlo.hopfen.feature.ui.DynamicHeightImageView
          android:id="@+id/image"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_margin="@dimen/default_margin"
          app:heightRatio="1.2"/>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          android:gravity="center_vertical"
          android:padding="16dp"
          android:background="@android:color/white"
          android:layout_gravity="bottom">

        <TextView
            style="@style/Theme.hopfen.TextAppearance.Headline"
            android:id="@+id/address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@null"
            android:paddingStart="@dimen/default_half_padding"
            android:gravity="start"
            android:textSize="16sp"
            android:textStyle="bold"
            android:ellipsize="end"
            android:singleLine="true"/>

        <TextView
            style="@style/Theme.hopfen.TextAppearance.Standard"
            android:id="@+id/attributes"
            android:layout_width="match_parent"
            android:drawableStart="@drawable/ic_location"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_half_margin"
            android:layout_gravity="center_vertical"
            android:ellipsize="end"
            android:textSize="14sp"
            android:singleLine="true"/>

      </LinearLayout>

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipChildren="true">

      <TextView
          android:id="@+id/live"
          android:layout_width="120dp"
          android:background="@drawable/rounded_stroke_green"
          android:layout_height="56dp"
          android:gravity="center"
          android:textSize="32sp"
          android:text="@string/action_like"
          android:textStyle="bold"
          android:textAllCaps="true"
          android:alpha="0"
          android:layout_marginTop="32dp"
          android:layout_marginBottom="32dp"
          android:textColor="@android:color/holo_green_light"/>

      <TextView
          android:id="@+id/leave"
          android:layout_gravity="right"
          android:layout_width="120dp"
          android:background="@drawable/rounded_stroke_red"
          android:layout_height="56dp"
          android:textSize="32sp"
          android:gravity="center"
          android:textStyle="bold"
          android:text="@string/action_pass"
          android:textAllCaps="true"
          android:alpha="0"
          android:layout_marginTop="32dp"
          android:layout_marginBottom="32dp"
          android:textColor="@android:color/holo_red_light"/>

    </FrameLayout>

  </FrameLayout>

</android.support.v7.widget.CardView>
