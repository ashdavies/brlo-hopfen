<?xml version="1.0" encoding="utf-8"?>
<resources>

  <!-- Application Themes -->
  <style name="Theme.Hopfen" parent="Theme.AppCompat.DayNight.NoActionBar">
    <item name="colorPrimary">@color/primary</item>
    <item name="colorPrimaryDark">@color/primary_dark</item>
    <item name="colorAccent">@color/accent</item>

    <item name="android:colorBackground">@android:color/white</item>
    <item name="android:textColorPrimary">@color/primary_text</item>
    <item name="android:textColorHint">@color/secondary_text</item>
    <item name="android:textColorLink">@color/accent</item>

    <item name="android:windowBackground">@color/divider</item>
  </style>

  <!-- Container Themes -->
  <style name="Theme.Hopfen.Layout">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>

    <item name="android:fitsSystemWindows">true</item>
  </style>

  <style name="Theme.Hopfen.Layout.Horizontal" parent="Theme.Hopfen.Layout">
    <item name="android:gravity">center_horizontal</item>
    <item name="android:orientation">horizontal</item>
  </style>

  <style name="Theme.Hopfen.Layout.Vertical" parent="Theme.Hopfen.Layout">
    <item name="android:gravity">center_vertical</item>
    <item name="android:orientation">vertical</item>
  </style>

  <style name="Theme.Hopfen.Layout.Vertical.Margin" parent="Theme.Hopfen.Layout.Vertical">
    <item name="android:layout_marginTop">@dimen/default_margin</item>
  </style>

  <style name="Theme.Hopfen.Layout.Vertical.Padding" parent="Theme.Hopfen.Layout.Vertical">
    <item name="android:padding">@dimen/default_padding</item>
  </style>

  <!-- TextAppearance Themes -->
  <style name="Theme.Hopfen.TextAppearance"/>

  <style name="Theme.Hopfen.TextAppearance.Standard" parent="TextAppearance.AppCompat.Medium">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>

    <item name="android:textColor">@color/secondary_text</item>
    <item name="android:textSize">@dimen/secondary_text</item>
  </style>

  <style name="Theme.Hopfen.TextAppearance.Bold" parent="Theme.Hopfen.TextAppearance.Standard">
    <item name="android:textStyle">bold</item>
  </style>

  <style name="Base.Theme.Hopfen.TextAppearance.Headline" parent="TextAppearance.AppCompat.Headline">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_margin">@dimen/default_margin</item>
    <item name="android:gravity">center_horizontal</item>

    <item name="android:fontFamily">@font/product_sans_bold</item>

    <item name="android:textColor">@color/primary_text</item>
    <item name="android:textSize">@dimen/primary_text</item>
  </style>

  <style name="Theme.Hopfen.TextAppearance.Headline" parent="Base.Theme.Hopfen.TextAppearance.Headline"/>

  <style name="Theme.Hopfen.TextAppearance.Quote" parent="Theme.Hopfen.TextAppearance.Standard"/>

  <!-- Dialog Themes -->
  <style name="Theme.Dialog" parent="Theme.AppCompat.Light.Dialog">
    <item name="android:windowNoTitle">true</item>
    <item name="android:background">@android:color/white</item>
  </style>

  <style name="Theme.Dialog.Fullscreen" parent="Theme.Dialog">
    <item name="android:windowBackground">@null</item>
    <item name="android:windowIsFloating">false</item>
    <item name="android:windowTranslucentStatus">true</item>
  </style>

</resources>
